<% layout('layouts/boilerplate') -%>

<section class="container mt-5">
  <h1 class="display-6 text-center text-orange mb-4">My Cart</h1>
  <div class="row">
    <!-- Cart Items -->
    <div class="col-lg-8">
      <% if(user.cart.length === 0){ %>
        <p class="text-center text-white">Your cart is empty!</p>
      <% } %>

      <% for(let item of user.cart){ %>
        <div class="card mb-3 shadow-sm bg-dark text-white">
          <div class="row g-0">
            <div class="col-4">
              <img src="<%=item.img%>" class="img-fluid rounded-start" alt="<%=item.name%>">
            </div>
            <div class="col-8">
              <div class="card-body">
                <h5 class="card-title text-orange"><%=item.name%></h5>
                <p class="card-text text-white-50"><%=item.desc%></p>
                <form action="/cart/<%= item._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-outline-orange btn-sm">Remove</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Cart Summary -->
    <div class="col-lg-4">
      <div class="card p-3 shadow-sm bg-dark text-white">
        <h5 class="mb-3 text-orange">Order Summary</h5>
        <ul class="list-group list-group-flush mb-3">
          <% for(let item of user.cart) { %>
            <li class="list-group-item bg-dark text-white d-flex justify-content-between align-items-center">
              <span><%=item.name%></span>
              <span>$ <%=item.price%></span>
            </li>
          <% } %>
          <li class="list-group-item bg-dark text-white fw-bold d-flex justify-content-between">
            <span>Total Amount:</span>
            <span>$ <%=totalAmount%></span>
          </li>
        </ul>

        <form action="/payment_gateway/payumoney" method="POST">
          <input type="hidden" name="amount" value="<%=totalAmount%>" />
          <input type="hidden" name="phone" value="9999999999" />
          <input type="hidden" name="service_provider" value="payu_paisa" />
          <input type="hidden" class="product" name="productinfo" value="<%=productInfo%>" />

          <button type="submit" class="btn btn-orange w-100">Checkout</button>
        </form>
      </div>
    </div>
  </div>
</section>
